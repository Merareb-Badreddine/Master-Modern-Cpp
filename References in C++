#include <iostream>
using namespace std;

// Function prototype
short Factor(int n, int *pSquared, int *pCubed);

int main() {
    int number, squared, cubed;
    short error;

    cout << "Enter a number (0 - 20): ";
    cin >> number;

    // Calling function
    error = Factor(number, &squared, &cubed);

    if (!error) {
        cout << "Number  : " << number << endl;
        cout << "Square  : " << squared << endl;
        cout << "Cube    : " << cubed << endl;
    } else {
        cout << "Error: Number must be between 0 and 20!" << endl;
    }

    return 0;
}

// Function definition
short Factor(int n, int *pSquared, int *pCubed) {
    if (n < 0 || n > 20) {
        return 1; // Error
    }
    *pSquared = n * n;
    *pCubed = n * n * n;
    return 0; // No error
}
